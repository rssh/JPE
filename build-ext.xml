<?xml version="1.0" encoding="UTF-8"?>
<project name="JPE-ext" default="default" basedir=".">
    <description>Extensions to JPE project</description>
  
    <property file="build.properties" />

   

    <taskdef name="jpe" classname="ua.gradsoft.jpe.ant.JPETask">
      <classpath>
        <pathelement location="${jpehome}/lib/JPE.jar" />
        <pathelement location="${jpehome}/lib/TermWare2.jar" />
        <pathelement location="${jpehome}/lib/JavaChecker2.jar" />
        <pathelement location="${jpehome}/lib/JavaChecker2Annotations.jar" />
        <pathelement location="${jpehome}/lib/TermWareJPP.jar" />
      </classpath>
    </taskdef>

    <target name="build-demo-sources">
      <jpe jpehome="${jpehome}"
           input="src"
           output="output/jpe-demo" 
           createOutputDir="true"
           >
        <includejars>
          <pathelement location="${jpehome}/lib/TermWare2.jar" />
          <pathelement location="${jpehome}/lib/JavaChecker2.jar" />
          <pathelement location="${jpehome}/lib/JavaChecker2Annotations.jar" />
          <pathelement location="${jpehome}/lib/TermWareJPP.jar" />
          <pathelement location="${jpehome}/lib/ant.jar" />
        </includejars>
        <ctconstant name="DEMO" value="true" />
        <ctconstant name="DEBUG" value="false" />
        <ctconstant name="IN_IDE" value="false" />
        <ctconstant name="VERSION" value="${version}" />
        <devirtualization enabled="true" />
        <eliminateUnreachable enabled="true" >
           <reachable classnamepattern="ua.gradsoft.jpe.Main"/>
           <reachable classnamepattern="ua.gradsoft.jpe.ant.JPETask"/>
        </eliminateUnreachable>
      </jpe>
    </target>

    <target name="compile-demo-sources" depends="build-demo-sources">
     <javac srcdir="output/jpe-demo" includes="**/*.java" debug="true" >
      <classpath>
        <pathelement location="${jpehome}/lib/TermWare2.jar" />
        <pathelement location="${jpehome}/lib/JavaChecker2.jar" />
        <pathelement location="${jpehome}/lib/JavaChecker2Annotations.jar" />
        <pathelement location="${jpehome}/lib/TermWareJPP.jar" />
        <pathelement location="${jpehome}/lib/ant.jar" />
      </classpath>
     </javac>
     <jar destfile="lib/JPEDemo.jar" index="true" >
      <fileset dir="output/jpe-demo" includes="**/*.class"/>
      <fileset dir="systems" includes="**/*.def"/>
      <manifest> 
       <attribute name="Build-By" value="${user-name}" />
       <attribute name="Main-Class" value="ua.gradsoft.jpe.Main" />
      </manifest> 
     </jar>
    </target>

    <target name="build-nd-sources">
      <jpe jpehome="${jpehome}"
           input="src"
           output="output/jpe-nd" 
           createOutputDir="true"
           >
        <includejars>
          <pathelement location="${jpehome}/lib/TermWare2.jar" />
          <pathelement location="${jpehome}/lib/JavaChecker2.jar" />
          <pathelement location="${jpehome}/lib/JavaChecker2Annotations.jar" />
          <pathelement location="${jpehome}/lib/TermWareJPP.jar" />
          <pathelement location="${jpehome}/lib/ant.jar" />
        </includejars>
        <ctconstant name="DEMO" value="false" />
        <ctconstant name="DEBUG" value="false" />
        <ctconstant name="IN_IDE" value="false" />
        <ctconstant name="VERSION" value="${version}" />
        <devirtualization enabled="true" />
        <eliminateUnreachable enabled="true" >
           <reachable classnamepattern="ua.gradsoft.jpe.Main"/>
           <reachable classnamepattern="ua.gradsoft.jpe.ant.JPETask"/>
        </eliminateUnreachable>
      </jpe>
    </target>

    <target name="compile-nd-sources" depends="build-nd-sources">
     <javac srcdir="output/jpe-nd" includes="**/*.java" debug="true" >
      <classpath>
        <pathelement location="${jpehome}/lib/TermWare2.jar" />
        <pathelement location="${jpehome}/lib/JavaChecker2.jar" />
        <pathelement location="${jpehome}/lib/JavaChecker2Annotations.jar" />
        <pathelement location="${jpehome}/lib/TermWareJPP.jar" />
        <pathelement location="${jpehome}/lib/ant.jar" />
      </classpath>
     </javac>
     <jar  destfile="lib/JPEND.jar" index="true">
      <fileset dir="output/jpe-nd" includes="**/*.class"/>
      <fileset dir="systems" includes="**/*.def"/>
      <manifest> 
       <attribute name="Build-By" value="${user-name}" />
       <attribute name="Main-Class" value="ua.gradsoft.jpe.Main" />
      </manifest> 
     </jar>
    </target>

    <target name="build-production-distributive" depends="compile-nd-sources">
      <copy file="lib/JPEND.jar" 
            tofile="final-distributives/jpe-prod/lib/JPE.jar" 
            overwrite="true"
            />
      <copy file="lib/TermWare2.jar" todir="final-distributives/jpe-prod/lib"/>
      <copy file="lib/TermWareJPP.jar" todir="final-distributives/jpe-prod/lib"
      />
      <copy file="lib/JavaChecker2.jar" todir="final-distributives/jpe-prod/lib"
      />
      <copy file="lib/JavaChecker2Annotations.jar" 
            todir="final-distributives/jpe-prod/lib"
      />
      <copy file="docs/UserGuide.odt" todir="final-distributives/jpe-prod/doc"/>
      <copy file="docs/README-prod" 
            tofile="final-distributives/jpe-prod/README"/>
      <copy todir="final-distributives/jpe-prod/demo">
        <fileset dir="demo" excludes="CVS/*,**/CVS" />
      </copy>
      <zip destfile="final-distributives/jpe-prod-${version}.zip"
           basedir="final-distributives"
           includes="jpe-prod/**/*.*,jpe-prod/README"
           excludes="CVS/*,**/CVS"
      />
    </target>

    <target name="build-demo-distributive" depends="compile-demo-sources">
      <copy file="lib/JPEDemo.jar" 
            tofile="final-distributives/jpe-demo/lib/JPE.jar" 
            overwrite="true"
            />
      <copy file="lib/TermWare2.jar" todir="final-distributives/jpe-demo/lib"/>
      <copy file="lib/TermWareJPP.jar" todir="final-distributives/jpe-demo/lib"
      />
      <copy file="lib/JavaChecker2.jar" todir="final-distributives/jpe-demo/lib"
      />
      <copy file="lib/JavaChecker2Annotations.jar" 
            todir="final-distributives/jpe-demo/lib"
      />
      <copy file="docs/UserGuide.odt" todir="final-distributives/jpe-demo/doc"/>
      <copy file="docs/README-prod" 
            tofile="final-distributives/jpe-demo/README"/>
      <copy todir="final-distributives/jpe-demo/demo">
        <fileset dir="demo" excludes="CVS/*,**/CVS" />
      </copy>
      <zip destfile="final-distributives/jpe-demo-${version}.zip"
           basedir="final-distributives"
           includes="jpe-demo/**/*.*,jpe-demo/README"
           excludes="CVS/*,**/CVS"
      />
    </target>

    <target name="termware-sources">
      <jpe jpehome="${jpehome}"
           input="../../TermWare.2/jsrc-core"
           output="output/jpe-termware" 
           createOutputDir="true"
           debugLevel="5"
           >
        <ctconstant name="AAA" value="true" />
        <disable  classname="ua.gradsoft.termware.parsers.terms.TermReader" />
        <disable  classname="ua.gradsoft.termware.parsers.terms.TermReaderTokenManager" />
        <devirtualization enabled="true" />
        <eliminateUnreachable enabled="true" >
           <reachable classnamepattern="ua.gradsoft.termware.Main"/>
           <reachable classnamepattern="ua.gradsoft.termware.TermWare"/>
           <reachable classnamepattern="ua.gradsoft.termware.DefaultFacts"/>
           <reachable classnamepattern="ua.gradsoft.termware.parsers.*"/>
           <reachable classnamepattern="ua.gradsoft.termware.printers.*"/>
        </eliminateUnreachable>
      </jpe>
    </target>

    <target name="compile-termware" depends="termware-sources">
     <javac srcdir="output/jpe-termware/" includes="**/*.java" debug="true" />
    </target>

    <target name="default" depends="build-production-distributive,build-demo-distributive" />

    <taskdef name="odt2html" classname="ua.gradsoft.odt2html.Odt2HtmlAntTask">
     <classpath>         
       <pathelement location="${odt2htmlhome}/ODT2HTML.jar"/>     
     </classpath>
    </taskdef>

    <target name="UserGuide.html">      
      <odt2html input="doc/UserGuide.odt"  output="doc/UserGuide.html" /> 
    </target>



</project>
